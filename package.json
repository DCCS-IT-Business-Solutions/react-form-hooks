{
  "name": "react-table-plain",
  "version": "0.0.1",
  "description": "A NPM package that helps creating HTML tables in a React-way.",
  "main": "build/index.js",
  "scripts": {
    "build": "run-s lint test transpile",
    "transpile": "tsc",
    "lint": "tslint ./src/**/*.ts*",
    "test": "jest --runInBand --coverage",
    "prepublishOnly": "yarn run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DCCS-IT-Business-Solutions/react-table.git"
  },
  "keywords": [
    "npm",
    "node",
    "react",
    "table",
    "sorting",
    "filter",
    "paging",
    "javascrip",
    "typescript"
  ],
  "author": "Stephan Mei√üner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DCCS-IT-Business-Solutions/react-table/issues"
  },
  "homepage": "https://github.com/DCCS-IT-Business-Solutions/react-table#readme",
  "dependencies": {
    "@types/jest": "^23.3.9",
    "jest": "^23.6.0",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)(spec|test).ts?(x)"
    ]
  }
}
