{
  "name": "@dccs/react-form-hooks",
  "version": "0.0.1",
  "description": "A NPM package that helps with form handling using react hooks.",
  "main": "lib/index.js",
  "scripts": {
    "watch": "tsc --watch",
    "build": "run-s lint transpile",
    "transpile": "tsc",
    "lint": "tslint ./src/**/*.ts*",
    "test": "jest --runInBand --coverage",
    "test:watch": "jest --runInBand --coverage --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DCCS-IT-Business-Solutions/react-form-hooks.git"
  },
  "keywords": [
    "npm",
    "node",
    "react",
    "form",
    "hooks",
    "javascript",
    "typescript"
  ],
  "author": "Stephan Mei√üner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/DCCS-IT-Business-Solutions/react-form-hooks/issues"
  },
  "homepage": "https://github.com/DCCS-IT-Business-Solutions/react-form-hooks#readme",
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "peerDependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "@types/lodash": "^4.14.132",
    "@types/react": "16.8.10",
    "@types/react-dom": "16.8.3",
    "enzyme": "3.9.0",
    "enzyme-adapter-react-16": "1.11.2",
    "jest": "24.5.0",
    "npm-run-all": "^4.1.5",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.4.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "<rootDir>/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "c**/?(*.)(spec|test).ts?(x)"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ]
  }
}
